function get_comments(page)
{
	var search = '';
	$.ajax({
		url : base_url+"Mentor_API/get_comments",
		method : "POST",
		data:{'Role':'records','skey':search,'page':page,'internshipID':internshipID},
		success:function(data){
			data = $.parseJSON(data);
			var html='';
			if(data.records!='')
			{
				var n = 1 ;
				$.each(data.records, function(i){
					var row = data.records[i];
					html += '<tr>';
					html += '<td>';
					html +=  n++;
					html += '.</td>';
                    html += '<td>';
                    if(row.firstname == null && row.lastname == null){
                        html +=  'From Mentor';
                    }
                    else{
                        html +=  row.firstname+' '+row.lastname;
                    }
					
					html += '</td>';
					html += '<td>';
					html +=  row.Activity_name;
					html += '</td>';
					html += '<td>';
					html +=  row.Comment;
					html += '</td>';
					html += '<td>';
					if(row.Mentor_reply == ""){
						html += '<a class="btn btn-primary btn-sm" onClick="make_reply('+row.commentID+')" >Reply</button>';
					}
					else{
						html +=  row.Mentor_reply;
					}
					html += '</td>';
					html += '<td>';
					html +=  row.CreatedOn;
					html += '</td>';
					
					html += '</tr>';
				});
			}
			else
				html+="<tr><td>No Results Found..</td></tr>";
			
			$('#show_data').html(html);
			$('#pagination').html(data.pagination);
		}
	});
}


function update_progress(progress,id){
	
	if(progress == 0)
		var percentage	 = 0
	else if(progress == 1)
		var percentage	 = 50
	else if(progress == 2)
		var percentage	 = 90
	else if(progress == 3)
		var percentage	 = 100	
	else	
		var percentage = $('#act_per_'+id).val();
		
	$('#act_per_'+id).val(percentage);
	
	$.ajax({
		url: base_url+"Mentor_API/update_progress",
		data: {'complete_percentage':percentage,'task_progress':progress,'assignID':id},
		type: 'POST',
		success: function(data){
			var data = $.parseJSON(data);
			if(data.err == 1){
				alertify.notify('Your task is successfully moved');
			}
		}
	})
}

